<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ClienteCadastroApp.ViewModels"
             x:Class="ClienteCadastroApp.ClienteFormPage"
             Title="Cadastro de Clientes">

    <Grid RowDefinitions="*,Auto" Padding="20" BackgroundColor="#F0F0F0">

        <!-- Área do formulário -->
        <ScrollView Grid.Row="0">
            <Frame CornerRadius="10"
                   BorderColor="Gray"
                   HasShadow="True"
                   Padding="20"
                   BackgroundColor="White"
                   Margin="0,0,0,10">

                <VerticalStackLayout Spacing="15">

                    <Entry Placeholder="Nome"
                           Text="{Binding Cliente.Name}"
                           BackgroundColor="#F5F5F5"
                           HeightRequest="40" />

                    <Entry Placeholder="Sobrenome"
                           Text="{Binding Cliente.Lastname}"
                           BackgroundColor="#F5F5F5"
                           HeightRequest="40" />

                    <Entry Placeholder="Idade"
                           Text="{Binding Cliente.Age}"
                           Keyboard="Numeric"
                           BackgroundColor="#F5F5F5"
                           HeightRequest="40" />

                    <Entry Placeholder="Endereço"
                           Text="{Binding Cliente.Address}"
                           BackgroundColor="#F5F5F5"
                           HeightRequest="40" />

                </VerticalStackLayout>
            </Frame>
        </ScrollView>

        <!-- Botões fixos no final -->
        <HorizontalStackLayout Grid.Row="1"
                               Spacing="20"
                               HorizontalOptions="Center"
                               VerticalOptions="End">

            <Button Text="Salvar"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:ClientesViewModel}}, Path=SalvarCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="100" />

            <Button Text="Cancelar"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:ClientesViewModel}}, Path=CancelarCommand}"
                    BackgroundColor="#CCCCCC"
                    TextColor="Black"
                    CornerRadius="10"
                    WidthRequest="100" />
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
