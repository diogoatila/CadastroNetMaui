<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ClienteCadastroApp.ViewModels"
             x:Class="ClienteCadastroApp.MainPage"
             Title="Lista de Clientes">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- Botão Adicionar -->
        <Button Text="Adicionar Cliente"
                Command="{Binding AdicionarCommand}"
                BackgroundColor="#007AFF"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45"
                Grid.Row="0" />

        <!-- Lista de Clientes -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Clientes}"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10"
                           Padding="15"
                           Margin="0,10"
                           BorderColor="#CCCCCC"
                           HasShadow="True"
                           BackgroundColor="White">
                        <StackLayout Spacing="10">
                            <Label Text="{Binding Name}"
                                   FontSize="18"
                                   FontAttributes="Bold" />

                            <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                                <Button Text="Editar"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:ClientesViewModel}}, Path=EditarCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#34C759"
                                        TextColor="White"
                                        CornerRadius="8"
                                        WidthRequest="80" />

                                <Button Text="Excluir"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:ClientesViewModel}}, Path=ExcluirCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#FF3B30"
                                        TextColor="White"
                                        CornerRadius="8"
                                        WidthRequest="80" />
                            </HorizontalStackLayout>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
